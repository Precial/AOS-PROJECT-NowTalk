<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SingupActivity">

    <ImageView
        android:src="@drawable/add_photo"
        android:id="@+id/signupActivity_imageview_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"/>

    <EditText
        android:id="@+id/signupActivity_edditext_email"
        android:hint="이메일"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />

    <EditText
        android:id="@+id/signupActivity_edditext_password"
        android:hint="비밀번호"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />

    <EditText
        android:id="@+id/signupActivity_edditext_name"
        android:hint="이름"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />

    <Button
        android:id="@+id/signupActivity_button_signup"
        android:text="회원가입"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />







</LinearLayout>